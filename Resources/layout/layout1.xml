<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">
     <TextView  
        android:text="Currency Converter app"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark" />
    <TextView  
        android:text="Amount"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />
    <EditText  
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNum1" />
    
     <LinearLayout  
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:gravity="bottom"
        android:layout_marginTop="10dp">
        <Button
            android:text="NZD --> AUD"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnna"
            android:textAlignment="center"
            android:layout_weight="25" /> The layout weight in total has to equal 100 and gives a 
percent of the total width for each of the buttons. So each button is 25% across
        <Button
            android:text="NZD --> USD"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnnu"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/btnplus"
            android:layout_toStartOf="@+id/btnmul"
            android:layout_weight="25" />
        <Button
            android:text="AUD --> USD"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnau"
            android:textAlignment="center"
            android:layout_toStartOf="@+id/btnDivide"
            android:layout_weight="25" />
        <Button
            android:text="AUD --> NZD"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnan"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_weight="25" />
        <Button
            android:text="USD --> NZD"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnun"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_weight="25" />
    </LinearLayout>
     <LinearLayout  
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:layout_marginTop="50dip">
        <Button
            android:text="BMI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLoadBMI"
            android:layout_weight="75" />
        <TextView
            android:text="Load BMI Program"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="25"
            android:layout_marginLeft="10dip"
            android:textSize="20dip"
            android:textColor="@android:color/holo_orange_dark" />
    </LinearLayout>
    <ListView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvAnswer" />
</LinearLayout>
